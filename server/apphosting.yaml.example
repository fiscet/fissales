# Settings for Backend (on Cloud Run).
# See https://firebase.google.com/docs/app-hosting/configure#cloud-run
runConfig:
  minInstances: 0
  # maxInstances: 100
  # concurrency: 80
  # cpu: 1
  # memoryMiB: 512

# Environment variables and secrets.
env:
  # Server Configuration
  - variable: NODE_ENV
    value: production
    availability:
      - BUILD
      - RUNTIME
  
  # Firebase Configuration (Admin SDK)
  - variable: FIREBASE_PROJECT_ID
    value: your-project-id
    availability:
      - BUILD
      - RUNTIME
  
  - variable: FIREBASE_PRIVATE_KEY
    value: "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
    availability:
      - BUILD
      - RUNTIME
  
  - variable: FIREBASE_CLIENT_EMAIL
    value: firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
    availability:
      - BUILD
      - RUNTIME

  # Qdrant Configuration
  - variable: QDRANT_URL
    value: https://your-cluster.qdrant.io:6333
    availability:
      - BUILD
      - RUNTIME
  
  - variable: QDRANT_API_KEY
    value: your-qdrant-api-key-here
    availability:
      - BUILD
      - RUNTIME

  # AI Model Configuration  
  - variable: OPENAI_API_KEY
    value: sk-proj-your-openai-api-key-here
    availability:
      - BUILD
      - RUNTIME
  
  - variable: GOOGLE_API_KEY
    value: your-google-api-key-here
    availability:
      - BUILD
      - RUNTIME
  
  - variable: OPENROUTER_API_KEY
    value: sk-or-v1-your-openrouter-api-key-here
    availability:
      - BUILD
      - RUNTIME

  # Shopify Configuration
  - variable: WEBSHOP_URL
    value: https://your-shop.myshopify.com
    availability:
      - BUILD
      - RUNTIME
  
  - variable: API_TOKEN
    value: shpat_your-shopify-api-token-here
    availability:
      - BUILD
      - RUNTIME
  
  - variable: SHOPIFY_API_VERSION
    value: "2025-04"
    availability:
      - BUILD
      - RUNTIME

  # Logging Configuration
  - variable: LOG_LEVEL
    value: info
    availability:
      - BUILD
      - RUNTIME
  
  - variable: LOG_FILE
    value: logs/app.log
    availability:
      - BUILD
      - RUNTIME
